@model IEnumerable<Foro2._0.Models.Respuesta>

@{
    ViewData["Title"] = "Listado de Respuestas";
}

<h1>Listado de Respuestas</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Texto</th>
            <th>Pregunta</th>
            <th>Fecha</th>
            <th>Miembro</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Texto</td>
                <td>@item.Pregunta?.Texto</td>
                <td>@item.Fecha.ToString("g")</td>
                <td>@item.Miembro?.UserName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Crear Nueva Respuesta</a>

