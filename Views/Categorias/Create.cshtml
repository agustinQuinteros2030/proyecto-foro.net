@model Foro2._0.Models.Categoria

@{
    ViewData["Title"] = "Nueva Categoría";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h3 class="card-title text-center mb-4">
                        <i class="bi bi-tags-fill me-2"></i> Crear Nueva Categoría
                    </h3>

                    <form asp-action="Create" novalidate>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Nombre" class="form-label fw-semibold">
                                <i class="bi bi-type"></i> Nombre de la categoría
                            </label>
                            <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Ej: Backend, Diseño UX, etc." />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Crear
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

