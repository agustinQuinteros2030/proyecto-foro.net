@model Foro2._0.Models.Entrada

@{
    ViewData["Title"] = "Crear Nueva Entrada";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Titulo"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Texto"></label>
        <textarea asp-for="Texto" class="form-control"></textarea>
        <span asp-validation-for="Texto" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Privada" class="form-check-input" />
        <label asp-for="Privada" class="form-check-label"></label>
    </div>

    <hr />

    <h4>Primera Pregunta</h4>

    <div class="form-group">
        <label for="TextoPregunta">Texto de la Pregunta</label>
        <textarea name="TextoPregunta" id="TextoPregunta" class="form-control" required></textarea>
    </div>

    <hr />

    <h4>Categoría</h4>

    <div class="form-group">
        <label>Elegir Categoría Existente</label>
        <select name="CategoriaId" class="form-control">
            <option value="">-- Seleccionar --</option>
            @foreach (var cat in (SelectList)ViewBag.Categorias)
            {
                <option value="@cat.Value">@cat.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>O Crear Nueva Categoría</label>
        <input type="text" name="NuevaCategoria" class="form-control" placeholder="Nombre nueva categoría (si no selecciona existente)" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Crear Entrada con Pregunta</button>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
