@model List<Foro2._0.Models.Habilitacion>
@{
    ViewData["Title"] = "Solicitudes de acceso";
}

<h2>Solicitudes de acceso a "@ViewBag.EntradaTitulo"</h2>

@if (!Model.Any())
{
    <p>No hay solicitudes pendientes.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Miembro</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var habilitacion in Model)
            {
                <tr>
                    <td>@habilitacion.Miembro.UserName</td>
                    <td>
                        <form asp-controller="Habilitaciones" asp-action="Aprobar" method="post">
                            <input type="hidden" name="id" value="@habilitacion.Id" />
                            <input type="hidden" name="entradaId" value="@ViewBag.EntradaId" />
                            <button type="submit" class="btn btn-sm btn-success">Habilitar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

