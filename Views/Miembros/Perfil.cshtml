@model Foro2._0.Models.Miembro
@{
    ViewData["Title"] = "Mi Perfil";
}

<h2 class="mb-4">Mi Perfil</h2>

<div class="card shadow-sm p-4 mb-3">
    <h4 class="mb-3">@Model.UserName</h4>

    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Apellido</dt>
        <dd class="col-sm-9">@Model.Apellido</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Fecha de Registro</dt>
        <dd class="col-sm-9">@Model.FechaAlta.ToShortDateString()</dd>
    </dl>

    <div class="mt-4">
        <a asp-action="Historial" class="btn btn-outline-primary me-2">Ver Historial</a>
        <a asp-controller="Miembros" asp-action="Edit" class="btn btn-outline-secondary">Editar Perfil</a>
    </div>
</div>

<a asp-controller="Home" asp-action="Index" class="btn btn-link">Volver al inicio</a>

