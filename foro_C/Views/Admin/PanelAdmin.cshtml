@{
    ViewData["Title"] = "Panel de Administración";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<h2>Panel de Administración</h2>

<div class="row mt-4">
    <div class="col-md-3 mb-3">
        <a asp-area="" asp-controller="miembros" asp-action="Index" class="text-decoration-none">
            <div class="card text-white bg-primary h-100">
                <div class="card-body d-flex align-items-center">
                    <i class="fa fa-users fa-2x me-3"></i>
                    <div>
                        <h5 class="card-title mb-0">Miembros</h5>
                        <small>Gestión de miembros</small>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-area="" asp-controller="empleados" asp-action="Index" class="text-decoration-none">
            <div class="card text-white bg-danger h-100">
                <div class="card-body d-flex align-items-center">
                    <i class="fa fa-user-shield fa-2x me-3"></i>
                    <div>
                        <h5 class="card-title mb-0">Administradores</h5>
                        <small>Gestión de Empleados</small>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-area="" asp-controller="categorias" asp-action="Index" class="text-decoration-none">
            <div class="card text-white bg-success h-100">
                <div class="card-body d-flex align-items-center">
                    <i class="fa fa-briefcase fa-2x me-3"></i>
                    <div>
                        <h5 class="card-title mb-0">Categorías</h5>
                        <small>Gestión de categorías</small>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-area="" asp-controller="preguntas" asp-action="Index" class="text-decoration-none">
            <div class="card text-white bg-warning h-100">
                <div class="card-body d-flex align-items-center">
                    <i class="fa fa-question-circle fa-2x me-3"></i>
                    <div>
                        <h5 class="card-title mb-0">Preguntas</h5>
                        <small>Gestión de preguntas</small>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-area="" asp-controller="respuestas" asp-action="Index" class="text-decoration-none">
            <div class="card text-white bg-info h-100">
                <div class="card-body d-flex align-items-center">
                    <i class="fa fa-reply fa-2x me-3"></i>
                    <div>
                        <h5 class="card-title mb-0">Respuestas</h5>
                        <small>Gestión de respuestas</small>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-area="" asp-controller="reacciones" asp-action="Index" class="text-decoration-none">
            <div class="card text-white bg-secondary h-100">
                <div class="card-body d-flex align-items-center">
                    <i class="fa fa-thumbs-up fa-2x me-3"></i>
                    <div>
                        <h5 class="card-title mb-0">Reacciones</h5>
                        <small>Gestión de reacciones</small>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-area="" asp-controller="entradas" asp-action="Index" class="text-decoration-none">
            <div class="card text-white bg-dark h-100">
                <div class="card-body d-flex align-items-center">
                    <i class="fa fa-file-alt fa-2x me-3"></i>
                    <div>
                        <h5 class="card-title mb-0">Entradas</h5>
                        <small>Gestión de entradas</small>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}