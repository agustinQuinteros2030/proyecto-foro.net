@model foro_C.Models.Entrada
@{
    ViewData["Title"] = "Crear Entrada";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-dark text-white rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Nueva Entrada</h3>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label fw-bold">📌 Título</label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ej: ¿Cómo uso Entity Framework?" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Texto" class="form-label fw-bold">📝 Texto</label>
                    <textarea asp-for="Texto" class="form-control" rows="6" placeholder="Contá en detalle tu duda o tema..."></textarea>
                    <span asp-validation-for="Texto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CategoriaId" class="form-label fw-bold">🏷️ Categoría</label>
                    <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId">
                        <option value="">-- Seleccioná una categoría --</option>
                    </select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" asp-for="Privada" type="checkbox" />
                    <label class="form-check-label" asp-for="Privada">
                        Entrada privada (sólo visible para vos y admins)
                    </label>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-upload"></i> Publicar Entrada
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

