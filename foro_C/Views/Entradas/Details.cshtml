@model foro_C.Models.Entrada
@inject SignInManager<Persona> signInManager

@{
    ViewData["Title"] = "Detalles";
}

<link rel="stylesheet" href="~/css/MisEstilos.css" />

<div class="container mt-5">
    <div class="card mx-auto shadow" style="max-width: 700px;">
        <div class="card-body">
            <h2 class="card-title">@Model.Titulo</h2>
            <p class="text-muted">
                <b>Categoría:</b> @Model.Categoria?.Nombre |
                <b>Autor:</b> @Model.Miembro?.Nombre |
                <b>Fecha:</b> @Model.Fecha.ToString("dd/MM/yyyy")
            </p>
            <hr />
            <p class="card-text">@Model.Texto</p>

            <p class="mt-3">
                <b>Estado:</b> <span class="badge @(Model.Privada ? "bg-secondary" : "bg-success")">
                    @(Model.Privada ? "Privada" : "Pública")
                </span>
            </p>

            <div class="d-flex justify-content-start gap-2 mt-4">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Respuestas" asp-action="Create" asp-route-entradaId="@Model.Id" class="btn btn-sm btn-success">
                        ➕ Responder
                    </a>


                    <form asp-controller="Reacciones" asp-action="Reaccionar" method="post">
                        <input type="hidden" name="entradaId" value="@Model.Id" />
                        <input type="hidden" name="accion" value="agregar" />
                        <button type="submit" class="btn btn-outline-success">❤️ Me gusta</button>
                    </form>

                    <form asp-controller="Reacciones" asp-action="Reaccionar" method="post">
                        <input type="hidden" name="entradaId" value="@Model.Id" />
                        <input type="hidden" name="accion" value="quitar" />
                        <button type="submit" class="btn btn-outline-danger">💔 No me gusta</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="IniciarSesion" class="btn btn-primary">Iniciar sesión</a>
                    <a asp-controller="Account" asp-action="Registrarse" class="btn btn-secondary">Registrarse</a>
                }
            </div>

            <div class="mt-5">
                <h5>🧵 Respuestas:</h5>
                @if (Model.Respuestas != null && Model.Respuestas.Any())
                {
                    <ul class="list-group">
                        @foreach (var r in Model.Respuestas)
                        {
                            <li class="list-group-item">
                                <strong>@r.Miembro?.Nombre:</strong> @r.Texto
                                <br />
                                <small class="text-muted">📅 @r.Fecha.ToString("dd/MM/yyyy")</small>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">No hay respuestas todavía. ¡Sé el primero en comentar!</p>
                }
            </div>
        </div>
    </div>
</div>
