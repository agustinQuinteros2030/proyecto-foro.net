@model foro_C.Models.Entrada

@{
    ViewData["Title"] = "Details";
}


<h1>Detalles</h1>

<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Resumen</dt>
        <dd class="col-sm-10">@Model.Resumen</dd>

        <dt class="col-sm-2">Imagen</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Imagen))
            {
                <img src="@Model.Imagen" alt="imagen" width="200" />
            }
        </dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.Estado</dd>

        <dt class="col-sm-2">Destacada</dt>
        <dd class="col-sm-10">@((Model.Destacada) ? "Sí" : "No")</dd>

    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>