@model foro_C.Models.Entrada

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="card mb-4">
    <div class="card-body">
        <h3>@Model.Titulo</h3>
        <p class="text-muted">por @Model.Miembro.UserName · @Model.Fecha.ToShortDateString()</p>
        <p>@Model.Texto</p>
        <p><strong>Categoría:</strong> @Model.Categoria.Nombre</p>
    </div>
</div>

<h4 class="mb-3">Respuestas (@Model.Preguntas.Count)</h4>

@if (Model.Preguntas != null && Model.Preguntas.Any())
{
    foreach (var r in Model.Preguntas)
    {
        <div class="card mb-2">
            <div class="card-body">
                <p>@r.Texto</p>
                <p class="text-muted small">por @r.Miembro.UserName el @r.Fecha.ToShortDateString()</p>
            </div>
        </div>
    }
}
else
{
    <p class="text-muted">Aún no hay respuestas.</p>
}

<a asp-action="Index" class="btn btn-secondary mt-4">Volver al foro</a>
