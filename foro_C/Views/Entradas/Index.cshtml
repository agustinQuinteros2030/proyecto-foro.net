@model IEnumerable<foro_C.Models.Entrada>

@{
    ViewData["Title"] = "Foro público";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="my-4 text-center">📢 Foro público</h2>

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@item.Titulo</h5>
                        <p class="card-text">@item.Texto?.Substring(0, Math.Min(100, item.Texto.Length))... </p>
                        <ul class="list-unstyled text-muted small">
                            <li>👤 <strong>Autor:</strong> @item.Miembro?.Nombre @item.Miembro?.Apellido</li>
                            <li>📅 <strong>Fecha:</strong> @item.Fecha.ToString("dd/MM/yyyy")</li>
                            <li>🏷️ <strong>Categoría:</strong> @item.Categoria?.Nombre</li>
                            <li>🔒 <strong>Privacidad:</strong> <span class="badge bg-@(item.Privada ? "secondary" : "success")">@(item.Privada ? "Privada" : "Pública")</span></li>
                        </ul>
                        <a class="btn btn-outline-primary btn-sm mt-2" asp-action="Details" asp-route-id="@item.Id">
                            👁️ Ver detalle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

