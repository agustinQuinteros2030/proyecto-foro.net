@model IEnumerable<foro_C.Models.Entrada>

@{
    ViewData["Title"] = "Entradas";
}

<h1>📢 Foro público</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Fecha</th>
            <th>Autor</th>
            <th>Categoría</th>
            <th>Privada</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Fecha.ToShortDateString()</td>
                <td>@item.Miembro?.Apellido</td>
                <td>@item.Categoria?.Nombre</td>
                <td>@(item.Privada ? "Sí" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Ver</a>
                </td>
            </tr>
        }
    </tbody>
</table>
