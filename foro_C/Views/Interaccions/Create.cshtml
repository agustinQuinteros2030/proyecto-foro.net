@model Interaccion
@{
    ViewData["Title"] = "Nueva Interacción";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4 p-4">
        <h2 class="text-center text-warning mb-4">Crear nueva interacción</h2>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Texto" class="form-label fw-semibold">💬 Contenido</label>
                <textarea asp-for="Texto" class="form-control" rows="4" placeholder="Escribí tu mensaje..."></textarea>
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>

          
            <div class="mb-3">
                <label asp-for="Fecha" class="form-label fw-semibold">🗓 Fecha</label>
                <input asp-for="Fecha" type="datetime-local" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MiembroId" class="form-label fw-semibold">🙋 Miembro</label>
                <select asp-for="MiembroId" class="form-select" asp-items="ViewBag.MiembroId"></select>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">← Volver al listado</a>
                <button type="submit" class="btn btn-warning fw-bold">✅ Crear interacción</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}