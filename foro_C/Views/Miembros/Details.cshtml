@model foro_C.Models.Miembro

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles </h1>

<div class="container mt-4">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h2 class="mb-0"><i class="bi bi-person-badge"></i> Detalles del Miembro</h2>
        </div>
        <div class="card-body">
            <dl class="row fs-5">
                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.UserName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.UserName)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.Apellido)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Apellido)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.FechaAlta)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaAlta)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt class="col-sm-3 fw-semibold text-muted">
                    @Html.DisplayNameFor(model => model.Telefono)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light text-end rounded-bottom-4">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Volver al listado
            </a>
        </div>
    </div>
</div>
