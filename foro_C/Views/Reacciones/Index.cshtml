@model IEnumerable<foro_C.Models.Reaccion>
@using System.Security.Claims
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Reacciones";
    var userId = int.Parse(HttpContextAccessor.HttpContext.User.FindFirstValue(ClaimTypes.NameIdentifier));
}

<h2>Mis Reacciones</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Respuesta</th>
            <th>Fecha</th>
            <th>Texto</th>
            <th>Miembro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.MiembroId == userId)
            {
                <tr>
                    <td>@item.Tipo</td>
                    <td>@item.Respuesta?.Texto</td>
                    <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@item.Texto</td>
                    <td>@item.Miembro?.Apellido</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

