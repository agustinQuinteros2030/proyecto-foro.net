@model IEnumerable<foro_C.Models.Respuesta>

@{
    ViewData["Title"] = "Respuestas";
}

<h1 class="mb-4">Listado de Respuestas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear Nueva Respuesta
    </a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Pregunta</th>
            <th>Fecha</th>
            <th>Texto</th>
            <th>Miembro</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Pregunta?.Texto</td>
                <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Texto</td>
                <td>@item.Miembro?.Apellido</td>
                <td class="text-center">
                   
                </td>
            </tr>
        }
    </tbody>
</table>

