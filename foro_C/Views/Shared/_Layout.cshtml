@inject SignInManager<Persona> signInManager
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - foro_C</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/foro_C.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/MisEstilos.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">foro_C</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <form class="d-flex me-3" method="get" asp-controller="Entradas" asp-action="Buscar">
                        <input class="form-control me-2" type="search" placeholder="Buscar entradas..." name="q" />
                        <button class="btn btn-outline-success" type="submit">Buscar</button>
                    </form>

                    <ul class="navbar-nav ms-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <span class="nav-link text-white">Hola, @User.Identity.Name</span>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Inicio</a>
                            </li>

                            @if (User.IsInRole("Miembro") || User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Entradas" asp-action="Create">Crear entrada</a>
                                </li>
                            }

                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Admin" asp-action="PanelAdmin">Panel Admin</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="CerrarSesion">Cerrar sesión</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="reddit-navbar-btn-primary" asp-controller="Account" asp-action="Registrar">Registrarse</a>
                            </li>
                            <li class="nav-item">
                                <a class="reddit-navbar-btn-primary" asp-controller="Account" asp-action="IniciarSesion">Iniciar sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center p-3 bg-light text-muted mt-4 border-top">
        <div>
            <a asp-controller="Policies" asp-action="Rules">Reglas</a> |
            <a asp-controller="Policies" asp-action="Privacy">Privacidad</a> |
            <a asp-controller="Policies" asp-action="UserAgreement">Términos</a>
        </div>
        <div class="mt-2">© 2025 foro_C. Todos los derechos reservados.</div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

