@inject SignInManager<Persona> signInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - foro_C</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/foro_C.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/MisEstilos.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            <form class="reddit-navbar-search" method="get" action="#">
                <input type="text" placeholder="Buscar en foro_C" name="q" />
                <button type="submit">🔍</button>
            </form>
                <div class="reddit-navbar-actions">
                    <ul class="navbar-nav flex-grow-1">
                   
                        @if (signInManager.IsSignedIn(User))
                        {

                            //aca debemos mostrar lo que el usuario puede ver si esta logueado

                      <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"></a>
                        </li>
                            <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="miembros" asp-action="Index">miembros</a>
                        </li>
                     
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="preguntas" asp-action="Index">preguntas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="respuestas" asp-action="Index">respuestas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="categorias" asp-action="Index">categorias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="reacciones" asp-action="Index">reacciones</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="entradas" asp-action="Index">entradas</a>
                        </li>
                          <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="CerrarSesion">Cerrar Sesion</a>
                        </li>  @if (User.IsInRole("Administrador"))
                              {
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="empleados" asp-action="Index">empleados</a>
                                </li>
                                <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Index">Panel de Administracion</a>
                            </li>
                        }

                        }
                        else {
                            //aca debemos mostrar lo que el usuario puede ver si no esta logueado
                          <li class="nav-item">
                            <a class=" reddit-navbar-btn-primary " asp-area="" asp-controller="Account" asp-action="Registrar">Registrarse</a>
                        </li>
                        <li class="nav-item">
                            <a class=" reddit-navbar-btn-primary " asp-area="" asp-controller="Account" asp-action="IniciarSesion">iniciar Sesion</a>
                        </li>
                      
                        }
                      </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="reddit-footer border-top footer text-muted">
        <div class="container reddit-footer-links">
            <a  asp-area="" asp-controller="Policies" asp-action="Rules">Reglas de foro_C</a>
            <a asp-area="" asp-controller="Policies" asp-action="Privacy">Política de privacidad</a>
            <a asp-area="" asp-controller="Policies" asp-action="UserAgreement">Acuerdo del usuario</a>
        </div>
              <div class="reddit-footer-copyright">
            foro_C, Inc. © 2025. Todos los derechos reservados.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
